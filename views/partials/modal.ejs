<style>
  #msg-modal {
    cursor: pointer;
    user-select: none;

    display: none;
  }

  #msg-modal.open {
    display: contents;
  }

  #msg-modal #bg {
    z-index: 99;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    /* filter: blur(10px); */
    background: #ffffffdd;
  }

  #msg-modal #window {
    z-index: 100;
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 240px;

    background: #eee;
    border: 2px solid;
    padding: 17px;

    display: flex;
    flex-direction: column;
    gap: 15px;

    border-radius: 10px;
    box-shadow: 6px 6px 0 #00000033;
    overflow: hidden;

    line-height: 1.6;
  }
</style>

<div id="msg-modal">
  <div id="bg"></div>
  <div id="window">
    <div class="text"></div>
  </div>
</div>

<script>
  $('#msg-modal').addEventListener('click', closeModal);

  function closeModal() {
    $('#msg-modal').classList.remove('open');
  }

  function openModal(text) {
    if (!text) return;
    $('#msg-modal .text').innerText = text;
    $('#msg-modal').classList.add('open');
  }
</script>
